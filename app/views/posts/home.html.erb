<% provide(:title, "Home") %>
<div class = "center hero-unit" >


		<h1>Posts Home</h1>

		<table class = "center">
		  <thead>
		    <tr>
		      <th>User</th>
		      <th>Title</th>
		      <th>Content</th>
		      <th></th>
		      <th></th>
		      <th></th>
		    </tr>
		  </thead>

		  <tbody>
		    <% @posts.each do |post| %>
		      <tr>
		        <td><%= post.user_id %></td>
		        <td><%= post.title %></td>
		        <td><%= post.content %></td>
		        <td><%= link_to 'Show', post %></td>
		        <td><%= link_to 'Edit', edit_post_path(post) %></td>
		        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>

		<br>

		<%= link_to 'New Post', new_post_path, class: "btn btn-large btn-primary" %>
	</div>

		<img alt = "dexileos" src= <%= asset_path('dexileos.png') %> id="dexileos" />

